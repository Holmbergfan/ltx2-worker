# LTX-2 RunPod Worker Environment Variables
# Copy to .env and fill in your values

# =============================================================================
# HuggingFace (for model downloads)
# =============================================================================
HF_TOKEN=hf_your_token_here
HUGGINGFACE_HUB_TOKEN=hf_your_token_here

# =============================================================================
# RunPod S3 Storage (for video output)
# =============================================================================
S3_BUCKET=07mhk8ul6o
S3_ENDPOINT_URL=https://s3api-eu-ro-1.runpod.io
S3_REGION=eu-ro-1

# AWS credentials for S3 access (get from RunPod storage settings)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Presigned URL expiry (seconds, default 1 hour)
PRESIGNED_URL_EXPIRY=3600

# =============================================================================
# Model & Cache Paths (network volume)
# =============================================================================
MODEL_DIR=/runpod-volume/models
HF_HOME=/runpod-volume/models/.cache/hf
HF_HUB_CACHE=/runpod-volume/models/.cache/hf
TRANSFORMERS_CACHE=/runpod-volume/models/.cache/hf
TMPDIR=/runpod-volume/tmp

# Enable faster HuggingFace downloads
HF_HUB_ENABLE_HF_TRANSFER=1

# =============================================================================
# ComfyUI
# =============================================================================
COMFY_HOME=/opt/ComfyUI
WORKFLOWS_DIR=/opt/workflows
