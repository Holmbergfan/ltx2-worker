{
  "name": "LTX-2 Text-to-Video with Audio (API)",
  "description": "LTX-2 distilled text-to-video with audio workflow using Gemma encoder and two-stage sampling pipeline.",
  "version": "3.0.0",
  "workflow": {
    "1": {
      "class_type": "CheckpointLoaderSimple",
      "inputs": {
        "ckpt_name": "ltx-2-19b-distilled.safetensors"
      }
    },
    "2": {
      "class_type": "LTXVAudioVAELoader",
      "inputs": {
        "ckpt_name": "ltx-2-19b-distilled.safetensors"
      }
    },
    "3": {
      "class_type": "LTXVGemmaCLIPModelLoader",
      "inputs": {
        "gemma_path": "gemma-3-12b-it-qat-q4_0-unquantized/model-00001-of-00005.safetensors",
        "ltxv_path": "ltx-2-19b-distilled.safetensors",
        "max_length": 1024
      }
    },
    "4": {
      "class_type": "CLIPTextEncode",
      "inputs": {
        "clip": ["3", 0],
        "text": "A cinematic shot of a mountain ridge at sunrise, slow push-in, soft wind ambience"
      }
    },
    "5": {
      "class_type": "CLIPTextEncode",
      "inputs": {
        "clip": ["3", 0],
        "text": "blurry, low quality, watermark, text overlay"
      }
    },
    "6": {
      "class_type": "LTXVConditioning",
      "inputs": {
        "positive": ["4", 0],
        "negative": ["5", 0],
        "frame_rate": 25
      }
    },
    "7": {
      "class_type": "LatentUpscaleModelLoader",
      "inputs": {
        "model_name": "ltx-2-spatial-upscaler-x2-1.0.safetensors"
      }
    },
    "8": {
      "class_type": "EmptyImage",
      "inputs": {
        "width": 1920,
        "height": 1088,
        "batch_size": 1,
        "color": 0
      }
    },
    "9": {
      "class_type": "ImageScaleBy",
      "inputs": {
        "image": ["8", 0],
        "upscale_method": "nearest-exact",
        "scale_by": 0.5
      }
    },
    "10": {
      "class_type": "GetImageSize",
      "inputs": {
        "image": ["9", 0]
      }
    },
    "11": {
      "class_type": "EmptyLTXVLatentVideo",
      "inputs": {
        "width": ["10", 0],
        "height": ["10", 1],
        "length": 121,
        "batch_size": 1
      }
    },
    "12": {
      "class_type": "LTXVEmptyLatentAudio",
      "inputs": {
        "frames_number": 121,
        "frame_rate": 25,
        "batch_size": 1,
        "audio_vae": ["2", 0]
      }
    },
    "13": {
      "class_type": "LTXVConcatAVLatent",
      "inputs": {
        "video_latent": ["11", 0],
        "audio_latent": ["12", 0]
      }
    },
    "14": {
      "class_type": "RandomNoise",
      "inputs": {
        "noise_seed": 42
      }
    },
    "15": {
      "class_type": "KSamplerSelect",
      "inputs": {
        "sampler_name": "euler"
      }
    },
    "16": {
      "class_type": "LTXVScheduler",
      "inputs": {
        "steps": 20,
        "max_shift": 2.05,
        "base_shift": 0.95,
        "stretch": true,
        "terminal": 0.1,
        "latent": ["13", 0]
      }
    },
    "17": {
      "class_type": "CFGGuider",
      "inputs": {
        "model": ["1", 0],
        "positive": ["6", 0],
        "negative": ["6", 1],
        "cfg": 4.0
      }
    },
    "18": {
      "class_type": "SamplerCustomAdvanced",
      "inputs": {
        "noise": ["14", 0],
        "guider": ["17", 0],
        "sampler": ["15", 0],
        "sigmas": ["16", 0],
        "latent_image": ["13", 0]
      }
    },
    "19": {
      "class_type": "LTXVSeparateAVLatent",
      "inputs": {
        "av_latent": ["18", 1]
      }
    },
    "20": {
      "class_type": "LTXVLatentUpsampler",
      "inputs": {
        "samples": ["19", 0],
        "upscale_model": ["7", 0],
        "vae": ["1", 2]
      }
    },
    "21": {
      "class_type": "LTXVConcatAVLatent",
      "inputs": {
        "video_latent": ["20", 0],
        "audio_latent": ["19", 1]
      }
    },
    "22": {
      "class_type": "RandomNoise",
      "inputs": {
        "noise_seed": 420
      }
    },
    "23": {
      "class_type": "KSamplerSelect",
      "inputs": {
        "sampler_name": "euler"
      }
    },
    "24": {
      "class_type": "ManualSigmas",
      "inputs": {
        "sigmas": "0.909375, 0.725, 0.421875, 0.0"
      }
    },
    "25": {
      "class_type": "CFGGuider",
      "inputs": {
        "model": ["1", 0],
        "positive": ["6", 0],
        "negative": ["6", 1],
        "cfg": 1.0
      }
    },
    "26": {
      "class_type": "SamplerCustomAdvanced",
      "inputs": {
        "noise": ["22", 0],
        "guider": ["25", 0],
        "sampler": ["23", 0],
        "sigmas": ["24", 0],
        "latent_image": ["21", 0]
      }
    },
    "27": {
      "class_type": "LTXVSeparateAVLatent",
      "inputs": {
        "av_latent": ["26", 1]
      }
    },
    "28": {
      "class_type": "LTXVSpatioTemporalTiledVAEDecode",
      "inputs": {
        "vae": ["1", 2],
        "latents": ["27", 0],
        "spatial_tiles": 4,
        "spatial_overlap": 4,
        "temporal_tile_length": 16,
        "temporal_overlap": 4,
        "last_frame_fix": false,
        "working_device": "auto",
        "working_dtype": "auto"
      }
    },
    "29": {
      "class_type": "LTXVAudioVAEDecode",
      "inputs": {
        "samples": ["27", 1],
        "audio_vae": ["2", 0]
      }
    },
    "30": {
      "class_type": "CreateVideo",
      "inputs": {
        "images": ["28", 0],
        "fps": 25,
        "audio": ["29", 0]
      }
    },
    "31": {
      "class_type": "SaveVideo",
      "inputs": {
        "video": ["30", 0],
        "filename_prefix": "video/LTX-2-audio",
        "format": "auto",
        "codec": "auto"
      }
    }
  },
  "example_prompts": [
    "A golden retriever running through a field of sunflowers, slow motion, cinematic lighting",
    "An astronaut floating in space with Earth in the background, stars twinkling, peaceful ambient music",
    "A chef preparing sushi in a traditional Japanese kitchen, close-up shots, ambient kitchen sounds",
    "Ocean waves crashing on a rocky beach at sunset, drone shot, nature sounds",
    "A futuristic city at night with flying cars and neon lights, rain, cyberpunk atmosphere"
  ]
}
